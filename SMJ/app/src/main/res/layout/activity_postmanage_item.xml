<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="133dp">


    <LinearLayout
        android:id="@+id/management_write_linearItem"
        android:layout_width="328dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/postmanage_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="9.9dp"
            android:lineSpacingExtra="6sp"
            android:text="제목"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/postmanage_item_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8.9dp"
            android:background="@color/linecolor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/postmanage_textView1" />

        <TextView
            android:id="@+id/postmanage_item_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginBottom="9.2dp"
            android:layout_weight="1"
            android:lineSpacingExtra="5sp"
            android:text="어쩌구"
            android:textColor="@color/contextcolor"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/postmanage_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:lineSpacingExtra="4sp"
                android:text="20.12.12"
                android:textColor="@color/contextcolor"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="19dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/baseline_more_horiz_black_18dp" />

            <TextView
                android:id="@+id/postmanage_item_comment"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:text="2"
                android:textAlignment="textEnd"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>