<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/post_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="청소"
        android:textColor="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/post_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textColor="#434343"
        android:text="제목제목제목"
        app:layout_constraintBottom_toBottomOf="@+id/post_item_category"
        app:layout_constraintStart_toEndOf="@+id/post_item_category"
        app:layout_constraintTop_toTopOf="@+id/post_item_category" />

    <TextView
        android:id="@+id/post_item_contents"
        android:layout_width="240dp"
        android:layout_height="21dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:text="글내용글내용글내용"
        app:layout_constraintStart_toStartOf="@+id/post_item_category"
        app:layout_constraintTop_toBottomOf="@+id/post_item_category" />

    <TextView
        android:id="@+id/post_item_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="글쓴이"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/post_item_category"
        app:layout_constraintTop_toBottomOf="@+id/post_item_contents" />

    <TextView
        android:id="@+id/post_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="2020-12-12 15:22"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/post_item_writer"
        app:layout_constraintTop_toTopOf="@+id/post_item_writer" />

    <ImageView
        android:id="@+id/post_item_profile_image"
        android:layout_width="88dp"
        android:layout_height="77dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/post_item_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/post_item_contents"
        app:layout_constraintTop_toTopOf="@+id/post_item_title"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/post_item_contour"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/second_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_item_date" />

    <View
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#f1f1f1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>